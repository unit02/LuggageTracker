<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mecs.hci.luggagetracker.sensors.TemperatureFragment">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/question_mark"
        android:id="@+id/helpBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:max="500"
        android:progress="420"
        android:progressDrawable="@drawable/circle_progress_temp"
        android:layout_below="@+id/bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />

    <LinearLayout
        android:id="@+id/cover"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="@color/colorBackground"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_alignParentStart="true"></LinearLayout>

    <TextView
        android:text="25"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:id="@+id/currentTempTextView"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/cover"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Current Temp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:elevation="2dp"
        android:id="@+id/currentTempertureTitleTextView"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_below="@+id/currentTempTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />


</RelativeLayout>
